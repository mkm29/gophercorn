type Post {
  id: ID!
  title: String!
  body: String!
  user: User!
}

type User {
  id: ID!
  name: String!
  address: String!
  phoneNumber: String!
}

type Query {
  posts: [Post!]!
  users: [User!]!
}

input NewPost {
  title: String!
  body: String!
  userId: String!
}

input NewUser {
  name: String!
  address: String!
  phoneNumber: String!
}

type Mutation {
  createPost(input: NewPost!): Post!
  createUser(input: NewUser!): User!
}